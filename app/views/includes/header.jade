
header#header
  .navbar.navbar-fixed-top(role='navigation')
    .navbar-inner
      .container
        a.brand(href='/') Node.js Express Mongoose Demo
        .nav-collapse.collapse
          ul.nav
            li
              a(href='/articles', title="article listing") #{__i('Articles')}
            li
              a(href="/articles/new", title="new article") #{__i('New')}
            li
              a(href="https://github.com/madhums/nodejs-express-mongoose-demo", title="fork me on github") #{__i('FORK ME ON GITHUB')}
          ul.nav.pull-right
            if (req.isAuthenticated())
              li
                a(href="/users/"+req.user.id, title="Profile") #{__i('Profile')}
              li
                a(href="/logout", title="logout") #{__i('Logout')}
            else
              li
                a(href="/login", title="Login") #{__i('Login')}
