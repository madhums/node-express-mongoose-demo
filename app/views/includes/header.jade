nav#mainNav.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .container-fluid
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') ТОВ "Блакитна затока"
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        - if (req.isAuthenticated())
          li(class=isActive('/articles') ? 'active' : '')
            a(href="/articles", title="Новини") Новини
          li(class=isActive('/electricityPayment') ? 'active' : '')
            a(href="/electricityPayment", title="Облік ") Облік
          li(class=isActive('/user') ? 'active' : 'dropdown')
            a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") Профіль
            ul.dropdown-menu
              li
                a(href="/users/" + req.user.id, title="Profile")
                  i.fa.fa-user
                  span #{'Мій профіль'}
              //li
                a(href="/articles/new", title="new article")
                  i.fa.fa-newspaper-o
                  span #{'Створити статтю'}
              //li
                a(href="/electricityPayment/new", title="new table")
                  i.fa.fa-table
                  span #{'Додати запис'}
              //li.divider(role="separator")
              li
                a(href="/logout", title="logout")
                  i.fa.fa-sign-out
                  span #{'Вийти'}
        - else
          li(class=isActive('/articles') ? 'active' : '')
            a(href="/articles", title="Новини") Новини
          li(class=isActive('/electricityPayment') ? 'active' : '')
            a(href="/electricityPayment", title="Облік ") Облік
          li(class=isActive('/login') ? 'active' : '')
            a(href="/login", title="Увійти") Увійти